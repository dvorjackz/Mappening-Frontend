{{> header}}

<div class="container home-container">
    <!-- Sidebar Search Results -->
    <div id="search-results"></div>
    <div class="row home-row" id="regular-mount">
            <div class="sidebar-mount col-sm-5 col-md-5">
                <div class="sidebar-header">
                    <!-- Search Box -->
                    <i class="glyphicon glyphicon-search" id="mobileSearchIcon"></i>
                    <form class="navbar-form has-feedback has-feedback-left" id="searchForm">
                        <div class="form-group" style="display:inline;" id="navBarSearchForm">
                            <div class="input-group right-inner-addon">
                                <input id="search-input" type="text" list="searchList" class="form-control" autocomplete="off" placeholder="search for an event...">
                                <i class="glyphicon glyphicon-search form-control-feedback" id="searchIcon"></i>
                                <datalist id="searchList"></datalist>
                            </div>
                        </div>
                    </form>

                    <!-- <form>
                        <i class="glyphicon glyphicon-search" id="mobileSearchIcon"></i>
                        <input></input>
                    </form> -->
                </div>
              <div id="categ-dropdown-mount"></div>
              <div id="events-mount"></div>
            </div>
            <div class="map-display col-sm-7 col-md-7" id="map">
              <div class='map-overlay top'>
                  <div class='map-overlay-inner'>
                    <p id="leftArrow" display="-webkit-inline-box" onclick="previousDay()"></p>
                    <p id="relativeDay"><br></p>
                    <p id="currDate"></p>
                    <p id="rightArrow"style="display:inline" onclick="nextDay()"></p>
                      <!--input id='slider' type='range' min='0' max='48' step='1' value='24' list='tickmarks'/-->
                  </div>
              </div>
            </div>
    </div>
    <div class="row home-row" id="mobile-mount"></div>
</div>

{{> footer}}
